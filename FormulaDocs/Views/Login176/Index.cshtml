@model FormulaDocs.Models.MemberShip
@{
                /**/

                ViewBag.Title = "เข้าสู่ระบบ";
}

@using (Html.BeginForm("Index", "Login176", FormMethod.Post))
{
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header h5">
                    <i class="fa fa-user"></i>&nbsp;เข้าสู่ระบบ
                </div>
                <div class="card-body">
                    <div class="form-row form-group centerlook">
                        <label class="col-3">ชื่อผู้ใช้งาน: </label>
                        <div class="col-9">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                    <div class="form-row form-group centerlook">
                        <label class="col-3">รหัสผ่าน: </label>
                        <div class="col-9">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="loginbtn text-right">
                        <button type="submit" class="btn btn-outline-primary">เข้าสู่ระบบ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
